cd $( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )

if [ -e 'dvm' ]; then
  rm dvm
fi

if [ -e 'dvm.exe' ]; then
  rm dvm.exe
fi

GOOS=windows GOARCH=amd64 go build -o bin/windows/amd64/dvm.exe
GOOS=windows GOARCH=386 go build -o bin/windows/386/dvm.exe

GOOS=darwin GOARCH=amd64 go build -o bin/darwin/amd64/dvm
GOOS=darwin GOARCH=386 go build -o bin/darwin/386/dvm

GOOS=linux GOARCH=amd64 go build -o bin/linux/amd64/dvm
GOOS=linux GOARCH=386 go build -o bin/linux/386/dvm
