cd $( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )

# Remove previously downloaded dvm-helper binaries
if [ -e 'dvm-helper' ]; then
  rm dvm-helper
fi
if [ -e 'dvm-helper.exe' ]; then
  rm dvm-helper.exe
fi

# Build ALL THE THINGS!
GOOS=windows GOARCH=amd64 go build -o bin/windows/amd64/dvm-helper.exe
GOOS=windows GOARCH=386 go build -o bin/windows/386/dvm-helper.exe

GOOS=darwin GOARCH=amd64 go build -o bin/darwin/amd64/dvm-helper
GOOS=darwin GOARCH=386 go build -o bin/darwin/386/dvm-helper

GOOS=linux GOARCH=amd64 go build -o bin/linux/amd64/dvm-helper
GOOS=linux GOARCH=386 go build -o bin/linux/386/dvm-helper
